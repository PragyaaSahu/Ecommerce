  <style>
  .table > tbody > tr > td {
     vertical-align: middle;
     text-align: center;
  }
</style>
<h3>Order Details</h3>
<table class="table table-bordered table-striped">
  <thead class="thead-dark">
     <tr>
       <th>Product Name</th>
       <th>Image</th>
       <th>Quantity</th>
       <th>Price</th>
       <th>Total</th>
     </tr>
 </thead>
 <tbody>
  <% @cart.line_items.each do |lineitem|%>
    <tr>
	  <td><b><%=lineitem.product.name %></b></td>
    <td style="width: 200px; height: 130px">
      <img src="<%=lineitem.product.picture%>", style="width: 200px; height: 130px"></td>
    <td><%= lineitem.quantity%></td>
	  <td><%= lineitem.price%></td>
    <td><%= lineitem.price*lineitem.quantity%></td>
	</tr>
  <%end%>
 </tbody>
</table>
<h3>Delivery Details</h3>
<table class="table table-bordered table-striped">
  <thead class="thead-dark">
     <tr>
       <th>Name</th>
       <th>Phone</th>
       <th>Amount</th>
       <th>Transaction_id</th>
       <th>Date</th>
       <th>Time</th>
       <th>Status</th>
     </tr>
 </thead>
 <tbody>
    <tr> 
	  <td><%=@order.name %></td>
      <td><%= @order.phone%></td>
	  <td><%= @order.total%></td>
      <td><%= @order.transaction_id%></td>
      <td><%= @order.created_at.strftime("%d-%m-%y")%></td>
      <th><%=@order.created_at.localtime.strftime("%H:%M:%S")%></th>
      <td><%= @order.status%></td>
	</tr>
 </tbody>
</table>
